          "// Auto-extract token from login/register responses",
          "if (pm.response && pm.response.json && pm.response.json().token) {",
          "    pm.collectionVariables.set('auth_token', pm.response.json().token);",
          "    if (pm.response.json().user && pm.response.json().user.role === 'admin') {",
          "        pm.collectionVariables.set('admin_token', pm.response.json().token);",
          "    }",
          "}"
        ]
